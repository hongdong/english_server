<mapper namespace="dao.TbsMenuMapper" > 

<!-- Result Map 数据库映射到实体类  -->
<resultMap id="tableMapToModel" type="model.TbsMenuModel" >
	<result column="id" property="id"/>
	<result column="parentId" property="parentId"/>
	<result column="name" property="name"/>
	<result column="isMenu" property="isMenu"/>
	<result column="type" property="type"/>
	<result column="sortNumber" property="sortNumber"/>
	<result column="url" property="url"/>
	<result column="button" property="button"/>
	<result column="status" property="status"/>
	<result column="createTime" property="createTime"/>
</resultMap>

<!-- 所有条件分页 -->
<sql id="model">
    <include refid="modelCount"/>
    ${pageUtil.orderByCondition}
    <if test="pageUtil.paging == true" >
    	${pageUtil.limit}
    </if>
</sql>

<!-- 总记录数 -->
<sql id="modelCount">
	<where>
	   <choose>
	      <when test="pageUtil.like==true">
	         <include refid="andOtherAllLike"/>
	      </when>
	      <otherwise>
	     	 <include refid="andOtherAll"/>
	      </otherwise>
	   </choose>
	   ${pageUtil.andCondition}
	</where>
    ${pageUtil.queryCondition}
</sql>

<!-- tbaleColumns  所有列 -->
<!--  id,name,password,nickName,email,icon,state,time,count,createTime,remark -->
<sql id="tbaleColumns">
	<trim suffix="" suffixOverrides=",">
		id,parentId,name,isMenu,type,sortNumber,url,button,status,createTime,		
	</trim>
</sql>


<!-- insertColumns 入库列 -->
<sql id="insertColumns">
	<trim suffix="" suffixOverrides=",">
		<if test="id != null and id != '' " >
			id,
		</if>
		<if test="parentId != null and parentId != '' " >
			parentId,
		</if>
		<if test="name != null and name != '' " >
			name,
		</if>
		<if test="isMenu != null " >
			isMenu,
		</if>
		<if test="type != null " >
			type,
		</if>
		<if test="sortNumber != null " >
			sortNumber,
		</if>
		<if test="url != null and url != '' " >
			url,
		</if>
		<if test="button != null and button != '' " >
			button,
		</if>
		<if test="status != null " >
			status,
		</if>
		<if test="createTime != null " >
			createTime,
		</if>
    </trim>
</sql>


<!-- insertParams  入库值 -->
<sql id="insertParams">
	<trim suffix="" suffixOverrides=",">
		<if test="id != null and id != '' " >
			#{id},
		</if>
		<if test="parentId != null and parentId != '' " >
			#{parentId},
		</if>
		<if test="name != null and name != '' " >
			#{name},
		</if>
		<if test="isMenu != null " >
			#{isMenu},
		</if>
		<if test="type != null " >
			#{type},
		</if>
		<if test="sortNumber != null " >
			#{sortNumber},
		</if>
		<if test="url != null and url != '' " >
			#{url},
		</if>
		<if test="button != null and button != '' " >
			#{button},
		</if>
		<if test="status != null " >
			#{status},
		</if>
		<if test="createTime != null " >
			#{createTime},
		</if>
    </trim>
</sql>


<!-- updateParams  更新列 -->
<sql id="updateParams">
	<trim suffix="" suffixOverrides=",">
		<if test="id != null and id != '' " >
			id=#{id},
	    </if>
		<if test="parentId != null and parentId != '' " >
			parentId=#{parentId},
	    </if>
		<if test="name != null and name != '' " >
			name=#{name},
	    </if>
		<if test="isMenu != null " >
			isMenu=#{isMenu},
	    </if>
		<if test="type != null " >
			type=#{type},
	    </if>
		<if test="sortNumber != null " >
			sortNumber=#{sortNumber},
	    </if>
		<if test="url != null and url != '' " >
			url=#{url},
	    </if>
		<if test="button != null and button != '' " >
			button=#{button},
	    </if>
		<if test="status != null " >
			status=#{status},
	    </if>
		<if test="createTime != null " >
			createTime=#{createTime},
	    </if>
    </trim>
</sql>


<!-- 条件 查询  , 去掉主键列-->
<sql id="andOther">
	<trim  suffixOverrides="," >
	  
		<if test="parentId != null " >
			    and parentId =  #{parentId}
		</if>
		<if test="name != null " >
			    and name =  #{name}
		</if>
		<if test="isMenu != null " >
			    and isMenu =  #{isMenu}
		</if>
		<if test="type != null " >
			    and type =  #{type}
		</if>
		<if test="sortNumber != null " >
			    and sortNumber =  #{sortNumber}
		</if>
		<if test="url != null " >
			    and url =  #{url}
		</if>
		<if test="button != null " >
			    and button =  #{button}
		</if>
		<if test="status != null " >
			    and status =  #{status}
		</if>
		<if test="createTime != null " >
